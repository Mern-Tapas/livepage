        {{>header}}
        <!-- form -->
        <div class="row vh-100">
            <div class="col d-flex h-100">
                <div class="m-auto login-container shadow-lg bg-light rounded overflow-hidden">
                    <h6 class="py-2 text-center color-3 text-light">Admin Login</h6>
                    <form action="/admin" method="post">
                        <div class="p-4 pt-4 d-flex flex-column">
                            <label class="mb-2 fw-bold text-secondary text-center" for="">User Id/ Email-id</label>
                            <input class="mb-2 border border-2 mx-auto p-2 w-100" name="email" placeholder="Enter Your Email" type="text">
                        </div>
                        <div class="p-4 pt-0 pb-2 d-flex flex-column">
                            <label class="mb-2 fw-bold text-secondary text-center" for="">Password</label>
                            <input class="mb-2 border border-2 mx-auto p-2 w-100" name="password" placeholder="Enter Your password" type="password">
                        </div>
                        <div>
                            <h6 class="m-0 text-center text-danger text-capitalize  ">{{massage}}</h6>
                        </div>
                        <div class="links px-4 py-2 ">
                            <a class="d-block text-primary"href="">Reset Password / Forgot Password</a>
                            <a class="d-block text-primary"href="">Contact Us</a>
                        </div>
                        
                        <div class="d-flex">
                            <button class="px-4 p-2 border-0 color-2 rounded text-light mx-auto" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- form -->
        {{>footer}}